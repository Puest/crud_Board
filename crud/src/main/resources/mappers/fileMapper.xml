<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="FileMapper">
	<!-- 첨부파일 등록 -->
	<insert id="insertFile">
		INSERT INTO(board_no, filename, file_path, file_size, upload_date)
		VALUES(#{board_no}, #{filename}, #{file_path}, #{file_size}, #{upload_date});
	</insert>
	
	<!-- 첨부파일 조회 -->
	<select id="selectFile" resultType="com.withfirst.crud.vo.FileVO">
		SELECT * FROM file
		WHERE board_no = #{board_no};
	</select>
	
	<!-- 첨부파일 삭제 -->
	<delete id="deleteFile">
		DELETE FROM file
		WHERE file_id = #{file_id};
	</delete>

</mapper>